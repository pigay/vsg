AT_CHECK([mpiexec -n 4 prtree2virt-maxbox --mpi --virtual-maxbox 4 --maxbox 1 --np 16 --expect-far-count 0], 0)
AT_CHECK([mpiexec -n 2 prtree2virt-maxbox --mpi --virtual-maxbox 4 --maxbox 1 --np 64 --expect-far-counts 12,66], 0)
