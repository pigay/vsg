# -*- makefile -*-

# common files
libvsg_common_headers = vsgprtree2-common.h vsgprtree3-common.h

# gdouble library

libvsgd_la_built_headers = vsgmatrix3d.h vsgmatrix4d.h vsgquaterniond.h \
vsgvector2d.h vsgvector3d.h vsgprtree2d.h vsgprtree3d.h \
vsgprtree2d-extras.h vsgprtree3d-extras.h vsgd.h

libvsgd_la_built_sources = vsgmatrix3d.c vsgmatrix4d.c vsgquaterniond.c \
vsgvector2d.c vsgvector3d.c vsgprtree2d.c vsgprtree3d.c \
vsgprtree2d-extras.c vsgprtree3d-extras.c vsgd.c

libvsgd_built_noinst_headers = vsgprtree2d-private.h vsgprtree3d-private.h

# gfloat library

libvsgf_la_built_headers = vsgmatrix3f.h vsgmatrix4f.h vsgquaternionf.h \
vsgvector2f.h vsgvector3f.h vsgprtree2f.h vsgprtree3f.h \
vsgprtree2f-extras.h vsgprtree3f-extras.h vsgf.h

libvsgf_la_built_sources = vsgmatrix3f.c vsgmatrix4f.c vsgquaternionf.c \
vsgvector2f.c vsgvector3f.c vsgprtree2f.c vsgprtree3f.c \
vsgprtree2f-extras.c vsgprtree3f-extras.c vsgf.c

libvsgf_built_noinst_headers = vsgprtree2f-private.h vsgprtree3f-private.h

# general library

libvsg_la_headers = vsg.h 
libvsg_la_sources = vsg.c

# template files

template_headers = vsgmatrix3@t@.h vsgmatrix4@t@.h vsgquaternion@t@.h \
vsgvector2@t@.h vsgvector3@t@.h vsgprtree2@t@.h vsgprtree3@t@.h \
vsgprtree2@t@-extras.h vsgprtree3@t@-extras.h vsg@t@.h

template_sources = vsgmatrix3@t@.c vsgmatrix4@t@.c vsgquaternion@t@.c \
vsgvector2@t@.c vsgvector3@t@.c vsgprtree2@t@.c vsgprtree3@t@.c \
vsgprtree2@t@-extras.c vsgprtree3@t@-extras.c vsg@t@.c

template_noinst_headers = vsgprtree2@t@-private.h vsgprtree3@t@-private.h

